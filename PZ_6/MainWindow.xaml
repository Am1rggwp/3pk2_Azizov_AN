<Window x:Class="PZ_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Страт синхронного процесса" HorizontalAlignment="Left" Margin="42,41,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="Button_Click"/>
        <ProgressBar Margin="16,81,16,295" Name="pbStatus" />
        <TextBlock Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0"  />
        <InkCanvas Height="170" Margin="30,252,5,12" Width="NaN"/>
    </Grid>
</Window>
